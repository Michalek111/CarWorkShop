@{
    ViewData["Title"] = "Home Page";
}

<div class="container my-5">
    <div class="text-center">
        <h1 class="display-3 mb-4">Welcome to Car Workshops</h1>
        <p class="lead text-muted mb-5">A platform for exploring, creating, and managing automotive workshops and their services.</p>
    </div>

    <hr class="my-5">

    <!-- Dodano justify-content-center -->
    <div class="row text-center justify-content-center">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Browse Workshops</h5>
                    <p class="card-text">Explore a variety of workshops offering different automotive services near you.</p>
                    <a href="@Url.Action("Index", "CarWorkshop")" class="btn btn-outline-primary">Explore</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Add Your Workshop</h5>
                    <p class="card-text">Are you a workshop owner? Register and add your workshop to reach more customers.</p>
                    <a href="@Url.Action("Create", "CarWorkshop")" class="btn btn-outline-primary">Get Started</a>
                </div>
            </div>
        </div>
    </div>
</div>

<footer class="bg-light py-4 mt-5">
    <div class="container text-center">
        <p class="mb-0 text-muted">&copy; 2024 CarWorkShop.MVC. All rights reserved.</p>
        <small class="text-muted">A platform for car enthusiasts and workshop owners to connect and collaborate.</small>
    </div>
</footer>